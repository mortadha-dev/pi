{% extends '@GestionVente/base/main.html.twig' %}

{% block content %}
    <h1>Commandeventes list</h1>

    <table class="table table-striped table-sm">
        <thead class="thead-dark" >
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Idclient</th>
                <th scope="col">Idlivraison</th>
                <th scope="col">Dateenvoie</th>
                <th scope="col">Datereception</th>
                <th scope="col">Selections</th>
                <th scope="col">Livr√©e</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commandeVente in commandeVentes %}
            <tr>
                <td scope="row"><a href="{{ path('vente_show_commande', { 'id': commandeVente.id }) }}">{{ commandeVente.id }}</a></td>
                <td>{{ commandeVente.idClient }}</td>
                <td>{{ commandeVente.idLivraison }}</td>
                <td>{% if commandeVente.dateEnvoie %}{{ commandeVente.dateEnvoie|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if commandeVente.dateReception %}{{ commandeVente.dateReception|date('Y-m-d H:i:s') }}{% endif %}</td>
                {% set ar = commandeVente.selections | json_decode() %}
                {#dump(ar)#}
                <td>
                    <ul>
                        {% for key,val in ar %}
                            {% set prod =  key |find() %}
                            {#dump(key)#}
                            {#dump(prod) #}
                            <li> {{ prod.name }} => {{ val }}</li>
                        {% endfor %}
                    </ul>
                </td>
                <td >{% if commandeVente.livree  %}<ion-icon name="checkmark-outline" size="large"></ion-icon><{% else %} <ion-icon name="close-outline" size="large"></ion-icon> {% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('vente_show_commande', { 'id': commandeVente.id }) }}"><button type="button" class="btn btn-primary">Show</button></a>
                        </li>
                        <li>
                            <a href="{{ path('vente_edit_commande', { 'id': commandeVente.id }) }}"><button type="button" class="btn btn-secondary">Edit</button></a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('vente_new_commande') }}"><button type="button" class="btn btn-success">Create</button></a>
        </li>
    </ul>
{% endblock %}
